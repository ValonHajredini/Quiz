<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table border="1">
  <thead>
    <tr>
      <th>Question</th>
      <th>Tru</th>
      <th>Falce 1</th>
      <th>Falce 2</th>
      <th>Falce 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td>
          <%@a_questions.each do |question|%>
          <% if question.id == answer.question_id  %>
          <%= question.question %>
          <% end %>
          <% end%>
        </td>
        <td><%= answer.tru %></td>
        <td><%= answer.falce_1 %></td>
        <td><%= answer.falce_2 %></td>
        <td><%= answer.falce_3 %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

